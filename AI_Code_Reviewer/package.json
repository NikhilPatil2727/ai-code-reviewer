{
  "name": "x-code-reviewer-ai",
  "displayName": "X Code Reviewer AI",
  "publisher": "nikhil27",
  "description": "AI-powered code reviewer that fixes bugs, security issues, and code quality",
  "icon": "logo.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "license": "MIT",
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeReviewer.reviewCurrentFolder",
        "title": "AI Code Reviewer: Review Current Folder"
      }
    ],
    "configuration": {
      "title": "AI Code Reviewer",
      "properties": {
        "aiCodeReviewer.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1"
  },
  "dependencies": {
    "@google/genai": "^1.34.0"
  }
}
